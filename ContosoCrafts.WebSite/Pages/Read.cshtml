@page "{id}"
@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Models
@inject JsonFileMenuServices ProductService
@model ReadModel

@{
    ViewData["Title"] = "Read page";
}

<h1 style="font-size: 2.0rem; font-weight: 600; line-height: 2;">Read</h1>

<div class="container">
    <p style="font-size: 1.0rem; font-weight: 400; line-height: 2;" id="productTitle">Name: <b>@Model.Item.Name</b></p>
    <img class="card-img" src='@Model.Item.Image' alt='Image for @Model.Item.Name' style="width: 300px; height: 300px; line-height: 2;" />
    <p style="font-size: 1.0rem; font-weight: 400; line-height: 2;">Description: <b>@Model.Item.Description</b></p>
    <p style="font-size: 1.0rem; font-weight: 400; line-height: 2;">Price: <b>@Model.Item.Price</b></p>
    <p style="font-size: 1.0rem; font-weight: 400; line-height: 2;">Category: <b>@Model.Item.Category</b></p>
</div>

<br />
<br />

<div class="row">
    <a asp-page="Update" asp-route-id="@Model.Item.Id" class="btn btn-primary">Update</a> &nbsp; &nbsp;
    <a asp-page="Delete" asp-route-id="@Model.Item.Id" class="btn btn-danger">Delete</a>
</div>
