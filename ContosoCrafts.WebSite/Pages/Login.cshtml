@page
@model LoginModel

<h2>Login</h2>
<p>Welcome to bobAteam! Please enter your credentials below to log in.</p>

<form method="post">
    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" />
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
    <button type="button" class="btn btn-secondary" onclick="location.href='/'">Cancel</button>
</form>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}


